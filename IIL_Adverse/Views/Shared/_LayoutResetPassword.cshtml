<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://jqueryvalidation.org/files/demo/site-demos.css" type="text/css">
</head>
<body>
    <div class="header">
        <div class="row">
            <div class="col-sm-12">
                <a href="#" class="logo logo-1"> <img src="~/Image/logo4.png" alt="" class="responsive-image"></a>
                <a href="#" class="logo logo-2">
                    Human Biologicals Institute
                    <sub class="logo-sub">A Division of Indian Immunologicals Limited</sub>
                </a>
                <div class="header-right">
                    <a class="" href="#">ADVERSE EVENT REPORTING</a>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="container">
        @RenderBody()
    </div>

    <center>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Indian Immunologicals Limited</p>
        </footer>
    </center>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/select2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
