
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HBI - Adverse Event Report</title>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/login.css" rel="stylesheet" />
    <script src="~/Scripts/login.js"></script>
</head>
<body>
    <div class=" container ">
        <div class="row ">
            <div class="col-sm-offset-2 col-sm-8 col-sm-offset-2">
                <div class="col-sm-offset-5 col-sm-2 col-sm-offset-5">
                    <img src="/image/logo4.png" alt="" class="img-responsive header-logo" width="60px">
                </div>
                <div class="col-sm-12 text-center">
                    <h2>Human Biologicals Institute</h2>
                    <sub>A Division of Indian Immunologicals Limited</sub>
                </div>
                <div class="col-sm-12 login-page">
                    <div class="row photo-row">
                        <img src="/image/Photo_Icon.png" alt="photo icon" class="photo-icon">
                    </div>
                    <div class="row">
                        <div class="col-sm-offset-3 col-sm-6 mt-1">
                            <form class="" autocomplete="off">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="User" placeholder="User Name" maxlength="8" required oninvalid="this.setCustomValidity('User Name cannot be empty.')" onchange="this.setCustomValidity('')">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" id="pwd" placeholder="Password" maxlength="30" required oninvalid="this.setCustomValidity('Password cannot be empty.')" onchange="this.setCustomValidity('')">
                                </div>
                                <div class="form-group">
                                    <a href="/CustomerRegistration/Index" class="pull-left new-user">New user? Register Now</a>
                                    <a href="/Account/ForgotPassword" class="pull-right forgotpassword">Forgot Password</a>
                                </div>
                                <div class="form-group">
                                    <button type="button" class="btn btn-primary pull-right btn-login">Login</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
